html
	height:100%
	position relative
body
	position relative
	// height: 100%
	min-height: 100%
	width:100%
	font-family: $primary-font
	overflow-x hidden
a
	text-decoration: none
	color:inherit
	&:hover
		text-decoration: none
h1,h2,h3
	font-family: $secondary-font
h1
	text-transform uppercase
	font-size: 23px
	font-weight: bold
	line-height: 28px
h2
	font-size: 15px
p
	color: #444444
	font-size: 13px
	line-height: 18px
.container-fluid
	padding-right: 1rem
	padding-left: 1rem
	&-md
		overflow hidden
		+from-width(5)
			padding-right: 1rem
			padding-left: 1rem
.wrap-container
	//768px - 1023
	margin:0 auto
	+from-width(48em)
		// max-width: 720px
		max-width: 90%
	//1024 - 1199
	+from-width(64em)
		max-width: 800px
		padding 0
		// max-width: 960px
		// max-width: 90%
		// max-width: 960px
	//1200px
	// +from-width(75em)
		// max-width: 1170px
		// max-width: 800px
	&-small-lg
		//1200px
		+from-width(75em)
			// max-width: 1000px
			max-width: calc(80% - 54px)
// strong 
// 	font-weight: 600
small
	font-size: 11px
.clearfix
	&:before,&:after
		content: ''
		display: block
		clear: both
		
.embed-container
	position: relative
	padding-bottom: 56.25%
	padding-top: 35px
	height: 0
	overflow: hidden
	iframe
		position: absolute
		top:0
		left: 0
		width: 100%
		height: 100%
.custom-dots
	position: absolute
	bottom -50px
	left 50%
	transform: translateX(-50%)
	width 100%
	text-align: center
	z-index: 1
	li
		display: inline-block
		button 
			font-size: 0px
			height: 10px
			width 10px
			border-radius: 10px
			margin:5px
			background: rgba($base-color,.37)
			&:hover
				cursor pointer
		&.slick-active button
			background: $base-color
.lh0
	line-height 0
body.of-hidden
	overflow-y: hidden!important
