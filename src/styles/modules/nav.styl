.nav
    background $blue
    display flex
    align-items: flex-end 
    position relative
    display: flex
    flex-wrap: wrap
    justify-content: space-around
    h1
        color white
        font-size: 14px
        line-height: 16px
        font-weight: 900
        &:before
            content '\e81f'
            font-family: $linearicons
            padding-right 5px
            font-weight: 400
            font-size: 11px
            vertical-align: bottom
        +from-width(5)
            font-size: 34px
            line-height: 40px
            font-weight: 600
            &:before
                padding-right: 10px
                font-size: 40px
    &_home
        height 63px
        padding 0 35px 15px
        +from-width(5)
            height 180px 
            padding 0 100px 18px
    &_intern
        padding 7px 0 7px 35px
        h1
            font-size: 10px
            line-height: 11px
            font-weight: 300
        +from-width(5)
            padding 22px 0 18px 120px
            h1
                font-size: 24px
                line-height: 28px
                font-weight: 300
                &:before
                    font-size: 29px
                    line-height: 29px
    &_lang
        width: 50%;
        text-align: right;
        // position absolute
        // right 0
        // bottom 0
        // padding  0 70px 0 0
        li
            text-align: center
            a
                color white
                font-size: 14px
                text-align: center
                +from-width(4)
                    font-size: 16px
            &.has-submenu
                position relative
                width: 120px;
                float: right;
                height 30px
                cursor pointer
                &:after
                    content '\e874'
                    display inline-block
                    font-family $linearicons
                    line-height 40px
                    font-size 12px
                    padding-left 10px
                    color white
                &.open
                    &:after
                        content "\e873"
        .navbar_submenu
            background #00578A !important
            // padding 0 20px
            display none
            position absolute
            width 100%
            text-align left
            z-index 1
            background: #fff
            // transform translateY(8px)
            a
                line-height: 25px
                padding: 0px 10px
                white-space: nowrap
                display block
                +from-width(4)
                    line-height: 30px
            > li
                &:hover
                    background rgba(white,.24)
					
    &--hotel
        background-image url('../img/bkg-hotel-name-mobile.png')
        background-size: cover
        background-position: center
        background-repeat no-repeat
        padding 15px 0
        display none
        +from-width(4)
            background-image url('../img/bkg-hotel-name.png')
            padding 45px 0
        &.show
            display block
        h2
            color black
            font-size: 16px
            line-height: 19px
            font-weight: 600
            text-transform: uppercase
            text-align: center
            position relative
            +from-width(4)
                font-size: 30px
                line-height: 35px
            &:before
                content ''
                width 30px
                height 30px
                display inline-block
                background-image url('../img/icono-oasis.png')
                background-size: 70%
                background-position: center
                background-repeat: no-repeat
                background-color black
                border-radius: 100%
                vertical-align: middle
                margin-right: 5px
                +from-width(5)
                    margin-right: 10px
                    width 45px
                    height 45px