form
    width 100%
    
    input
    textarea
        border 2px solid $blue-button
        border-radius: 4px
        height 56px
        width 100%
        padding 0 20px
        &[type="submit"]
            margin 18px 8px 0
            +from-width(5)
                width auto
        &[type="checkbox"]
            width 24px
            height 24px
            vertical-align: middle
        &.invalid
            background-color $red
        &.inputfile
            width: 0.1px
            height: 0.1px
            opacity: 0
            overflow: hidden
            position: absolute
            z-index: -1
    button
        &:disabled
            background lightness($blue-button, 70%)
            cursor not-allowed
    textarea
        height auto
    .tab
        display none
    .submit
        margin 18px 8px 0
        +from-width(5)
            width auto
    .input-group
        position relative
        padding 8px
        label
            position absolute
            background white
            color $blue-button
            font-size: 12px
            line-height: 16px
            letter-spacing: 0.4px
            text-align: left
            padding 0 2px
            top 0
            left 20px
    .block--info
        padding 20px 8px 0
        &-text
            color $gray-44
            font-weight: 300
            padding 10px 0
            font-size: 14px
            line-height: 16px
            width 100%
        &-table
            padding 10px 0
            table
                width 100%
                background #F6F6F6
                input
                    &[type="checkbox"]
                        width 24px
                        height 24px
                thead
                    border-bottom 1px solid rgba($gray-44,.2)
                    
                    th
                        font-size: 14px
                        line-height: 16px
                        padding 6px 0
                        text-align: left
                        &.center
                            text-align: center
                tbody
                    td
                        color $gray-44
                        font-size: 14px
                        line-height: 16px
                        &.center
                            text-align: center
    .load-image
        padding-bottom: 18px
       
        &--container
            border 1px dashed $gray-44
            text-align: center
            border-radius: 5px
            cursor pointer
            .upload
                width 100%
                height 100%
                cursor pointer
            img
                display none
                height 100%
                width: 100%
                object-fit: cover
                flex-shrink: 0
                max-height 100px
            span
                color rgba(black,.5)
                font-size: 17px
                line-height: 20px
                text-transform: uppercase
                font-weight: 600
                text-align: center
                padding 15px 0 26px 0
                display block
                &:before
                    content 'f'
                    font-family: $precheckin
                    display block
                    color #FA6400
                    font-size: 17px
                    line-height: 17px
                    text-transform: none
                    padding-bottom: 10px


        