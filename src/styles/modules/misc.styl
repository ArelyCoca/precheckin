                padding-right: 10px


// DIVISOR-----------------------------------------
.divisor
	width 100%
	height 50px
	+from-width(5)
		height 100px
// PAGE -------------------------------------------
.section--page
    padding-top: 50px !important
    padding-bottom: 50px !important
    min-height: calc(100vh - 24px - 60px - 47px)
    +from-width(4)
        min-height: calc(100vh - 24px - 125px - 47px)
    +from-width(5)
        min-height: calc(100vh - 69px - 135px - 47px)
