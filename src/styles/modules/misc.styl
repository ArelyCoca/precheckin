// TEXT----------------------------------------------------------
.text-center
    text-align: center
.title-section
    color rgba($gray-44,0.6)
    font-size: 14px
    line-height: 16px
    font-weight: 900
    text-align: center
    padding 16px 0
    width 100%
    +from-width(5)
        font-size: 24px
        line-height: 28px
        text-align: left
        padding 37px 0
    &.hotel
        &:before
            content 'c'
            font-family: $precheckin
            font-size: 11px
            line-height: 11px
            font-weight: 400
            padding-right: 5px
            +from-width(5)
                font-size: 21px
                line-height: 21px
                padding-right: 10px
    &.user
        &:before
            content 'i'
            font-family: $precheckin
            font-size: 11px
            line-height: 11px
            font-weight: 400
            padding-right: 5px
